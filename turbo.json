{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalPassThroughEnv": [
    "PNPM_VERIFY_DEPS_BEFORE_RUN"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "prisma:generate"
      ]
    },
    "lint": {
      "env": [
        "GITHUB_ACTIONS"
      ]
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:migrate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "publish-package": {
      "cache": false,
      "dependsOn": [
        "build",
        "@gw2treasures/publish-package#build"
      ],
      "env": [
        "GITHUB_EVENT_NAME",
        "GITHUB_OUTPUT",
        "NODE_AUTH_TOKEN",
        "NPM_CONFIG_PROVENANCE"
      ]
    },
    "e2e": {},
    "test": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}

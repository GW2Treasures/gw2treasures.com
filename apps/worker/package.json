  },
  "devDependencies": {
    "@tsconfig/node18": "18.2.2",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "@vercel/ncc": "0.38.0",
    "eslint": "8.49.0",
    "gw2-api-types": "0.0.5",
    "typescript": "5.2.2",
    "undici": "5.24.0"

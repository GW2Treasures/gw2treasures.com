    "gw2e-chat-codes": "1.4.2"
  },
  "devDependencies": {
    "@gw2treasures/tsconfig": "*",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.10",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.57.0",
    "gw2-api-types": "0.0.8",
    "jest": "29.7.0",
    "ts-jest": "29.2.0",

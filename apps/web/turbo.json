{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ],
      "env": ["SKIP_LINT"]
    },
    "dev": {
      "dependsOn": [
        "^build",
        "@gw2treasures/database#prisma:migrate"
      ]
    },
    "lint": {
      "dependsOn": [
        "@gw2treasures/eslint-plugin-nextjs#build"
      ]
    }
  }
}
